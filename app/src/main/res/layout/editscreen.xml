<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:layout_height="match_parent"
>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="To edit new data..."
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_choose_image"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="press to choose photo"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/edittopic_address"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_marginTop="216dp"
        android:background="@drawable/textfeild"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textColorHint="@color/blue"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_update" />

    <EditText
        android:id="@+id/edittopic_details"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textfeild"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="description"
        android:textColorHint="@color/blue"
        android:textSize="17sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittopic_address" />


    <ImageView
        android:id="@+id/image_update"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintStart_toEndOf="@+id/edit_choose_image"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_marginEnd="171dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittopic_details" />

    <VideoView
        android:id="@+id/editvideoView"
        android:layout_width="325dp"
        android:layout_height="122dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_choose_image" />

    <Button
        android:id="@+id/editchoose_video"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:text="press to choose video"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editvideoView" />
</androidx.constraintlayout.widget.ConstraintLayout>