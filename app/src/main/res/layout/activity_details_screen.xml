<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Pationts.DetailsScreen">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Media -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Title, secondary and supporting text -->
                        <ImageView
                            android:id="@+id/topic_image"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/profile_card" />

                        <TextView
                            android:id="@+id/topic_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lato_bold"
                            android:text="title"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="@color/blue"
                            android:textSize="50sp" />

                        <TextView
                            android:id="@+id/topic_des"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/lato_regular"
                            android:text="secondary_text"
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textColor="?android:attr/textColorSecondary"
                            android:textSize="20sp" />


                    </LinearLayout>

                    <!-- Buttons -->


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/videoView2"
                android:layout_width="1dp"
                android:layout_height="1dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="83dp"
                tools:layout_editor_absoluteY="701dp" >

            </com.google.android.exoplayer2.ui.PlayerView>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:fontFamily="@font/lato_bold"
                android:gravity="center"
                android:text="For More Treatment And Prevention Options.\nBook Now"
                android:textColor="@color/blue"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/BOOK_oppintment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/BOOK_oppintment"
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_marginStart="83dp"
                android:layout_marginEnd="58dp"
                android:layout_marginBottom="62dp"
                android:text="Book With Doctor NOW"
                android:backgroundTint="@color/blue"
                android:textColor="@color/beige"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>