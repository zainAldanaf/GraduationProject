<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/NEW"
    tools:context=".Controller.Doctor.updateTopic"
    >

    <TextView
        android:id="@+id/textView9"
        android:layout_width="286dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:text="Edit Your Data..."
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.656"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edit_choose_image"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:text="Choose Image "
        android:textSize="13dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/beige"        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <EditText
        android:id="@+id/edittopic_address"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/textfeild"
        android:ems="10"
        android:hint="Your Title:"
        android:inputType="textPersonName"
        android:textColorHint="@color/blue"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_update" />


    <EditText
        android:id="@+id/edittopic_details"
        android:layout_width="350dp"
        android:layout_height="115dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/textfeild"
        android:ems="10"
        android:hint="Your Description :"
        android:inputType="textPersonName"
        android:textColorHint="@color/blue"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittopic_address" />

    <ImageView
        android:id="@+id/image_update"
        android:layout_width="95dp"
        android:layout_height="93dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/baseline_image_24"
        app:layout_constraintStart_toEndOf="@+id/edit_choose_image"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        android:layout_marginEnd="171dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittopic_details" />

    <VideoView
        android:id="@+id/editvideoView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_choose_image" />

    <Button
        android:id="@+id/editchoose_video"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="20dp"
        android:text="press to chosse video"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editvideoView" />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="350dp"
        android:layout_height="54dp"
        android:layout_marginTop="8dp"
        android:text="edit"
        android:textSize="25dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/beige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.572"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressbar" />

</androidx.constraintlayout.widget.ConstraintLayout>